# MongoDB connection string
# For MongoDB Atlas:
MONGO_AUTH=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# For local MongoDB:
# MONGO_AUTH=mongodb://localhost:27017/

# MongoDB database name
MONGODB_DB_NAME=document_processing

# Output directory for processed documents
OUTPUT_DIR=./output

# API port
API_PORT=8000

# Groq API key for RAG system
GROQ_API_KEY=your_groq_api_key_here

# RAG system configuration
RAG_PROVIDER_TYPE=chromadb  # Options: chromadb, qdrant, faiss
EMBEDDING_MODEL_TYPE=groq   # Options: groq, openai
GROQ_MODEL=llama-3.1-70b-versatile
TOP_K_RESULTS=5

# Vector storage paths
CHROMA_DB_PATH=./chroma_storage
QDRANT_URL=http://localhost:6333  # Optional, for Qdrant
QDRANT_PATH=./qdrant_storage     # Optional, for Qdrant
FAISS_PATH=./faiss_index         # Optional, for FAISS
